<body>

  <h1>🔒 Code Lock Treasure Hunt 🪙</h1>
  <p>Enter the 3-digit code to unlock the treasure chest!</p>

  <img id="chest" src="level4image.jpg" alt="Closed Treasure Chest">

  <div>
    <input type="text" id="codeInput" placeholder="000" maxlength="3" size="3">
  </div>
  
  <button onclick="checkCode()">🔑 Unlock</button>

  <div id="message"></div>

  <a href="page2.html" class="link-button">All Levels</a>

<script type="module">
  import { initializeApp } from "https://www.gstatic.com/firebasejs/12.1.0/firebase-app.js";
  import { getFirestore, collection, query, where, getDocs, updateDoc, doc } from "https://www.gstatic.com/firebasejs/12.1.0/firebase-firestore.js";

  const firebaseConfig = {
    apiKey: "AIzaSyBa_wF-wp2v42mLNic1_R1a7w0skWV94b8",
    authDomain: "useless-ecf5e.firebaseapp.com",
    projectId: "useless-ecf5e",
    storageBucket: "useless-ecf5e.firebasestorage.app",
    messagingSenderId: "399978256767",
    appId: "1:399978256767:web:2bb6f882fc03074bd5224a",
    measurementId: "G-2RHWZRZKHR"
  };

  const app = initializeApp(firebaseConfig);
  const db = getFirestore(app);

  const secretCode = "947";

  async function checkCode() {
    const userCode = document.getElementById("codeInput").value.trim();
    const message = document.getElementById("message");

    if (userCode === secretCode) {
      // Get player's phone number from localStorage
      const phone = localStorage.getItem("playerPhone");
      if (!phone) {
        message.style.color = "red";
        message.textContent = "❌ Player not recognized. Please sign up first.";
        return;
      }

      try {
        // Query player document by phone
        const playersRef = collection(db, "players");
        const q = query(playersRef, where("phone", "==", phone));
        const querySnapshot = await getDocs(q);

        if (querySnapshot.empty) {
          message.style.color = "red";
          message.textContent = "❌ Player record not found. Please sign up first.";
          return;
        }

        // For each matching doc, update currentLevel to 2 if less than 2
        let updated = false;
        querySnapshot.forEach(async (docSnap) => {
          const data = docSnap.data();
          if (!data.currentLevel || data.currentLevel < 2) {
            await updateDoc(doc(db, "players", docSnap.id), { currentLevel: 2 });
            updated = true;
          }
        });

        message.style.color = "green";
        message.textContent = "🎉 Correct! You unlocked the treasure! Redirecting to levels...";

        // Redirect after short delay
        setTimeout(() => {
          window.location.href = "page2.html";
        }, 2000);

      } catch (error) {
        message.style.color = "red";
        message.textContent = "❌ Error updating level: " + error.message;
      }

    } else {
      message.style.color = "red";
      message.textContent = "❌ Wrong code! Try again.";
    }
  }
</script>

